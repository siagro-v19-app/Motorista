<mvc:View
	controllerName="br.com.idxtecMotorista.controller.Motorista"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:t="sap.ui.table">
	<App id="app">
		<pages>
			<Page>
				<content>
					<t:Table id="tableMotorista"
						rows="{path: '/Motoristas'}"
						alternateRowColors="true">
						<t:toolbar>
							<Toolbar>
								<Title text="Lista de motoristas"/>
							</Toolbar>
						</t:toolbar>
						<t:columns>
							<t:Column filterProperty="Nome" sortProperty="Nome">
								<Label text="Nome"/>
								<t:template>
									<Text text="{Nome}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="Cpf" sortProperty="Cpf">
								<Label text="CPF"/>
								<t:template>
									<Text text="{Cpf}"/>
								</t:template>
							</t:Column>
						</t:columns>
					</t:Table>
				</content>
				<footer>
					<Toolbar>
						<Button icon="sap-icon://refresh" press="onRefresh"/>
						<ToolbarSpacer/>
						<Button text="Incluir novo" press="onIncluir"/>
						<Button text="Editar" press="onEditar"/>
						<Button text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>